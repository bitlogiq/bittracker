default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Authenticate with App Store Connect
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      in_house: false
    )

    # Fetch certificates & profiles from your match repo
    match(
      type: "appstore",
      readonly: false,
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      username: ENV["APPLE_ID"],
      team_id: ENV["TEAM_ID"],
      storage_mode: "git",
      keychain_name: "login.keychain-db",
      keychain_password: ENV["MATCH_PASSWORD"],
      api_key: ENV["APP_STORE_CONNECT_API_KEY"]
    )

    # Build the app and allow auto provisioning updates
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      workspace: "./Runner.xcworkspace",
      output_directory: "./build",
      output_name: "Runner.ipa",
      xcargs: "DEVELOPMENT_TEAM=#{ENV['TEAM_ID']}",
      export_options: {
        provisioningProfiles: {
          ENV["APP_IDENTIFIER"] => "match AppStore #{ENV['APP_IDENTIFIER']}"
        }
      },
      allow_provisioning_updates: true # ðŸ‘ˆ key fix
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
