default_platform(:ios)

platform :ios do
  desc "CI lane to build and upload to TestFlight"
  lane :ci do
    # --- Temporary CI keychain (for GitHub Actions runner) ---
    create_keychain(
      name: "ci_tmp",
      password: "temp_password_123",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false,
      add_to_search_list: true,   # âœ… correct param (old one was invalid)
      require_create: true
    )

    # --- Code signing (fetch certs/profiles via match) ---
    match(
      type: "appstore",  # App Store distribution
      readonly: false,
      app_identifier: ENV["APP_IDENTIFIER"] || "za.co.bitlogiq.bittracker",
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"], # optional if using HTTPS+token
      keychain_name: "ci_tmp",
      keychain_password: "temp_password_123"
    )

    # --- Build app (gym) ---
    build_app(
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates DEVELOPMENT_TEAM=#{ENV['TEAM_ID'] || 'R4R4AW7JUQ'}",
      output_directory: "build",
      output_name: "BitTracker.ipa"
    )

    # --- Upload to TestFlight ---
    upload_to_testflight(
      api_key_path: ENV["APP_STORE_CONNECT_API_KEY_PATH"], # API key JSON generated in workflow
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )

  ensure
    # Always clean up the temp keychain
    begin
      delete_keychain(name: "ci_tmp")
    rescue
      UI.message("Keychain cleanup skipped (not found).")
    end
  end
end
