default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Use ASC API key from env vars (no file needed)
    api_key = app_store_connect_api_key(
      key_id:      ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id:   ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],  # full PEM including BEGIN/END
      is_key_content_base64: false,
      duration: 1200,
      in_house: false
    )

    # Fetch signing from match
    match(
      type: "appstore",
      readonly: true,
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"], # optional
      password: ENV["MATCH_PASSWORD"]
    )

    # Ensure build number bumps to avoid TestFlight duplicate build error
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # Build from inside ios/ (note the workspace path has NO 'ios/' prefix here)
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      submit_for_beta_review: false
    )
  end
end
