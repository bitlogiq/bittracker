default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # 1) App Store Connect API
    api_key = app_store_connect_api_key(
      key_id:      ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id:   ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"], # full PEM with BEGIN/END
      is_key_content_base64: false,
      duration: 1200,
      in_house: false
    )

    # 2) Match (HTTPS + PAT)
    basicauth_b64 = (ENV["MATCH_GIT_BASIC_AUTH_B64"] || "").sub(/^Basic\s+/i, "")
    UI.user_error!("MATCH_GIT_BASIC_AUTH_B64 is empty") if basicauth_b64.empty?

    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url: ENV["MATCH_GIT_URL"],            # https://github.com/bitlogiq/ios-cert-store.git
      git_branch: "main",
      git_basic_authorization: basicauth_b64,   # base64 ONLY
      api_key: api_key,
      app_identifier: [ENV["APP_IDENTIFIER"]],
      team_id: ENV["TEAM_ID"],
      username: ENV["APPLE_ID"]
    )

    # 3) Ensure project has your Team and Manual signing (applies directly to .xcodeproj)
    update_project_team(
      path: "Runner.xcodeproj",
      teamid: ENV["TEAM_ID"]
    )

    automatic_code_signing(
      path: "Runner.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV["TEAM_ID"]
    )

    # 4) Bump build number
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # 5) Build with explicit overrides so Xcode canâ€™t ignore settings
    bundle_id = ENV["APP_IDENTIFIER"]
    profile_name = "match AppStore #{bundle_id}"

    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",

      # Strong overrides at build time (compile/archive)
      xcargs: [
        "DEVELOPMENT_TEAM=#{ENV['TEAM_ID']}",
        "CODE_SIGN_STYLE=Manual",
        "PRODUCT_BUNDLE_IDENTIFIER=#{bundle_id}",
        "PROVISIONING_PROFILE_SPECIFIER=#{profile_name}",
        "CODE_SIGN_IDENTITY=Apple Distribution"
      ].join(" "),

      # Export options for packaging
      export_options: {
        signingStyle: "manual",
        teamID: ENV["TEAM_ID"],
        provisioningProfiles: {
          bundle_id => profile_name
        }
      }
    )

    # 6) Upload
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      submit_for_beta_review: false
    )
  end
end
