default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Authenticate with App Store Connect
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_KEY_CONTENT"],
      duration: 1200,
      in_house: false
    )

    # Sync only App Store certs/profiles
    match(
      type: "appstore",
      readonly: true
    )

    # ðŸš€ Build IPA with explicit signing config
    build_app(
      scheme: "Runner",
      workspace: "./Runner.xcworkspace",
      export_method: "app-store",
      xcargs: "CODE_SIGN_STYLE=Manual DEVELOPMENT_TEAM=R4R4AW7JUQ CODE_SIGN_IDENTITY='Apple Distribution' PROVISIONING_PROFILE_SPECIFIER='match AppStore za.co.bitlogiq.bittracker'"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
