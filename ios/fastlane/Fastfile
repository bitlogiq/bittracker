default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # üîê Fetch certificates & provisioning profiles
    match(
      type: "appstore",
      readonly: false,
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTH_B64"],
      keychain_name: "login.keychain-db",
      keychain_password: ENV["MATCH_PASSWORD"],
      api_key: app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key: ENV["APP_STORE_CONNECT_PRIVATE_KEY"]
      )
    )

    # üì¶ Build .ipa with gym
    gym(
      workspace: "Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      export_options: "ExportOptions.plist", # use the one you created
      output_directory: "../build/ios/ipa",  # ensures IPA ends up here
      output_name: "BitTracker.ipa",
      clean: true
    )

    # ‚òÅÔ∏è Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      notify_external_testers: false
    )
  end
end
