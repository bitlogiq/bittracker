default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # App Store Connect API key from env
    api_key = app_store_connect_api_key(
      key_id:      ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id:   ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"], # full PEM with BEGIN/END
      is_key_content_base64: false,
      duration: 1200,
      in_house: false
    )

    # Fetch signing from match (no `password:` option â€” MATCH_PASSWORD env is used automatically)
    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"], # optional
      api_key: api_key,                     # use API key instead of Apple ID login
      app_identifier: [ENV["APP_IDENTIFIER"]]
    )

    # Bump build number to avoid TestFlight duplicate
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    # Build from inside ios/ (workspace path has no 'ios/' prefix)
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      submit_for_beta_review: false
    )
  end
end
