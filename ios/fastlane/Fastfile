default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # üîê Fetch certificates & provisioning profiles
    match(
      type: "appstore",
      readonly: false,
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      api_key: app_store_connect_api_key(
        key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
        issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
        key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
        in_house: false
      ),
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTH_B64"],
      keychain_name: "login.keychain-db",
      keychain_password: ENV["MATCH_PASSWORD"]
    )

    # üì¶ Explicitly point to exported IPA from workflow
    ipa_path = "../build/ios/ipa/Runner.ipa"

    upload_to_testflight(
      ipa: ipa_path,
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      beta_app_review_info: {
        contact_email: "roelofhorowitz@hotmail.com",
        contact_first_name: "Roelof",
        contact_last_name: "Horowitz",
        contact_phone: "+27609714817",
        demo_account_name: "demo",
        demo_account_password: "password123"
      }
    )
  end
end
