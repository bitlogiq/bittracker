default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # -------------------
    # App Store Connect API key (from env vars)
    # -------------------
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      in_house: false
    )

    # -------------------
    # Pull signing certs/profiles from match repo
    # -------------------
    basicauth_b64 = (ENV["MATCH_GIT_BASIC_AUTH_B64"] || "").sub(/^Basic\s+/i, "")
    UI.user_error!("MATCH_GIT_BASIC_AUTH_B64 is empty") if basicauth_b64.empty?

    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      clone_branch_directly: true,   # ðŸ‘ˆ fix for branch error
      git_basic_authorization: basicauth_b64,
      app_identifier: [ENV["APP_IDENTIFIER"]],
      username: ENV["APPLE_ID"],
      team_id: ENV["TEAM_ID"]
    )

    # -------------------
    # Force project signing to manual with your team
    # -------------------
    update_project_team(
      path: "Runner.xcodeproj",
      teamid: ENV["TEAM_ID"]
    )

    automatic_code_signing(
      path: "Runner.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV["TEAM_ID"]
    )

    # -------------------
    # Increment build number
    # -------------------
    increment_build_number(
      xcodeproj: "Runner.xcodeproj"
    )

    # -------------------
    # Build IPA with explicit signing overrides
    # -------------------
    bundle_id = ENV["APP_IDENTIFIER"]
    profile_name = "match AppStore #{bundle_id}"

    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",
      xcargs: "DEVELOPMENT_TEAM=#{ENV['TEAM_ID']} CODE_SIGN_STYLE=Manual " \
              "PRODUCT_BUNDLE_IDENTIFIER=#{bundle_id} " \
              "PROVISIONING_PROFILE_SPECIFIER='#{profile_name}' " \
              "CODE_SIGN_IDENTITY='Apple Distribution'",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
          bundle_id => profile_name
        },
        teamID: ENV["TEAM_ID"]
      }
    )

    # -------------------
    # Upload to TestFlight
    # -------------------
    upload_to_testflight
  end
end
