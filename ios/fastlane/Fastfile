default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight (CI-safe)"
  lane :ci do
    create_keychain(
      name: "ci_tmp",
      password: "temp_password_123",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      add_to_search_list: true
    )

    api_key = app_store_connect_api_key(
      key_id:                 ENV['ASC_KEY_ID'],
      issuer_id:              ENV['ASC_ISSUER_ID'],
      key_content:            File.read(ENV['APP_STORE_CONNECT_API_KEY_PATH']),
      is_key_content_base64:  false,
      in_house:               false
    )

    match(
      type:              "appstore",
      readonly:          false,
      app_identifier:    ENV['APP_IDENTIFIER'],
      git_url:           ENV['MATCH_GIT_URL'],
      api_key:           api_key,
      keychain_name:     "ci_tmp",
      keychain_password: "temp_password_123",
      verbose:           true
    )

    build_app(
      scheme:           "Runner",
      configuration:    "Release",
      export_method:    "app-store",
      output_directory: "build",
      output_name:      "BitTracker",
      xcargs:           "DEVELOPMENT_TEAM=#{ENV['TEAM_ID']} -allowProvisioningUpdates"
    )

    upload_to_testflight(
      api_key:                           api_key,
      skip_submission:                   true,
      skip_waiting_for_build_processing: true
    )
  ensure
    delete_keychain(name: "ci_tmp")
  end
end
