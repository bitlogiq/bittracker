default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight"
  lane :beta do
    UI.message(">>> app_store_connect_api_key")
    asc_key = app_store_connect_api_key(
      key_id:      ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id:   ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      in_house:    false
    )

    UI.message(">>> match (HTTPS + PAT)")
    basicauth_b64 = (ENV["MATCH_GIT_BASIC_AUTH_B64"] || "").sub(/^Basic\s+/i, "")
    UI.user_error!("MATCH_GIT_BASIC_AUTH_B64 is empty") if basicauth_b64.empty?

    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      git_basic_authorization: basicauth_b64,
      api_key: asc_key,
      app_identifier: [ENV["APP_IDENTIFIER"]],
      username: ENV["APPLE_ID"],
      team_id: ENV["TEAM_ID"],
      keychain_name: "login.keychain"
    )

    UI.message(">>> update_project_team")
    update_project_team(
      teamid: ENV["TEAM_ID"],
      targets: ["Runner", "RunnerTests"],
      path: "Runner.xcodeproj"
    )

    UI.message(">>> update_code_signing_settings(manual)")
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: ENV["TEAM_ID"],
      targets: ["Runner", "RunnerTests"],
      code_sign_identity: "Apple Distribution",
      profile_name: "match AppStore #{ENV['APP_IDENTIFIER']}",
      path: "Runner.xcodeproj"
    )

    UI.message(">>> increment_build_number")
    increment_build_number(
      xcodeproj: "Runner.xcodeproj"
    )

    UI.message(">>> build_app (no fragile xcargs)")
    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",

      # ✅ Correct way to wire profiles: via export_options
      export_options: {
        signingStyle: "manual",
        teamID: ENV["TEAM_ID"],
        provisioningProfiles: {
          ENV["APP_IDENTIFIER"] => "match AppStore #{ENV['APP_IDENTIFIER']}"
        }
      }

      # ⛔️ No xcargs with spaces here; the project already has signing set.
      # xcargs: ""  (intentionally omitted)
    )

    UI.message(">>> upload_to_testflight")
    upload_to_testflight(
      api_key: asc_key,
      skip_waiting_for_build_processing: true,
      submit_beta_review: false
    )
  end
end
