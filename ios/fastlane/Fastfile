# ios/fastlane/Fastfile

default_platform(:ios)

platform :ios do
  lane :beta do
    UI.message(">>> app_store_connect_api_key")
    api = app_store_connect_api_key(
      key_id:      ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id:   ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      in_house:    false
    )

    UI.message(">>> match (HTTPS + PAT)")
    basicauth_b64 = (ENV["MATCH_GIT_BASIC_AUTH_B64"] || "").sub(/^Basic\s+/i, "")
    UI.user_error!("MATCH_GIT_BASIC_AUTH_B64 is empty") if basicauth_b64.empty?

    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      git_basic_authorization: "Basic #{basicauth_b64}",
      api_key: api,
      app_identifier: [ENV["APP_IDENTIFIER"]],
      team_id: ENV["TEAM_ID"],
      username: ENV["APPLE_ID"],
      keychain_name: "login.keychain"
    )

    UI.message(">>> update_project_team")
    update_project_team(
      path: "Runner.xcodeproj",
      teamid: ENV["TEAM_ID"],
      targets: ["Runner", "RunnerTests"]
    )

    UI.message(">>> update_code_signing_settings (manual)")
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: ENV["TEAM_ID"],
      targets: ["Runner", "RunnerTests"],
      build_configurations: ["Debug", "Release", "Profile"]
    )

    UI.message(">>> increment_build_number")
    increment_build_number(xcodeproj: "Runner.xcodeproj")

    UI.message(">>> build_app with export_options mapping")
    bundle_id    = ENV["APP_IDENTIFIER"]
    team_id      = ENV["TEAM_ID"]
    profile_name = "match AppStore #{bundle_id}"

    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store",

      # Correct place to bind provisioning profile
      export_options: {
        signingStyle: "manual",
        teamID: team_id,
        provisioningProfiles: {
          bundle_id => profile_name
        }
      },

      # No PROVISIONING_PROFILE_SPECIFIER here!
      xcargs: %Q[
        DEVELOPMENT_TEAM=#{team_id}
        CODE_SIGN_STYLE=Manual
        PRODUCT_BUNDLE_IDENTIFIER=#{bundle_id}
        CODE_SIGN_IDENTITY="Apple Distribution"
      ]
    )

    UI.message("âœ… Build finished")
  end
end
