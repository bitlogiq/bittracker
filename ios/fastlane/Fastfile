default_platform(:ios)

platform :ios do
  desc "CI lane to build and upload to TestFlight"
  lane :ci do
    # 1. Create a temporary keychain for CI
    create_keychain(
      name: "ci_tmp",
      default_keychain: true,
      timeout: 3600,
      unlock: true,
      add_to_keychain_search_list: true,
      password: "temp_password_123"
    )

    # 2. Fetch certificates & provisioning profiles using match
    match(
      type: "appstore", # App Store / TestFlight distribution
      readonly: false,  # CI can create if profiles donâ€™t exist
      app_identifier: "za.co.bitlogiq.bittracker",
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"],
      keychain_name: "ci_tmp",
      keychain_password: "temp_password_123"
    )

    # 3. Build the app
    build_app(
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      clean: true,
      output_directory: "build",
      output_name: "BitTracker.ipa",
      xcargs: "DEVELOPMENT_TEAM=#{ENV['APPLE_TEAM_ID']} CODE_SIGN_STYLE=Manual"
    )

    # 4. Upload to TestFlight
    upload_to_testflight(
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end
