default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight (CI-safe)"
  lane :ci do
    create_keychain(
      name: "ci_tmp",
      password: "temp_password_123",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      add_to_search_list: true
    )

    api_key = app_store_connect_api_key(
      key_id: ENV['ASC_KEY_ID'],
      issuer_id: ENV['ASC_ISSUER_ID'],
      key_content: File.read(ENV['APP_STORE_CONNECT_API_KEY_PATH']),
      is_key_content_base64: true,   # âœ… set this to true since your key is stored as base64
      in_house: false
    )

    match(
      type: "appstore",
      readonly: false,
      api_key: api_key
    )

    build_app(
      scheme: "Runner",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )

    delete_keychain(name: "ci_tmp")
  end
end
