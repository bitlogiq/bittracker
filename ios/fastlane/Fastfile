default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id:      ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id:   ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      is_key_content_base64: false,
      duration: 1200,
      in_house: false
    )

    # Remove any accidental "Basic " prefix from the env var (defensive)
    basicauth_b64 = ENV["MATCH_GIT_BASIC_AUTHORIZATION"].to_s.sub(/^Basic\s+/i, "")

    match(
      type: "appstore",
      readonly: true,
      storage_mode: "git",
      git_url: ENV["MATCH_GIT_URL"],            # https URL
      git_branch: "main",                       # change if your cert repo uses master
      git_basic_authorization: basicauth_b64,   # <-- pass ONLY base64, no "Basic "
      api_key: api_key,
      app_identifier: [ENV["APP_IDENTIFIER"]],
      team_id: ENV["TEAM_ID"],
      username: ENV["APPLE_ID"]
    )

    increment_build_number(xcodeproj: "Runner.xcodeproj")

    build_app(
      scheme: "Runner",
      workspace: "Runner.xcworkspace",
      export_method: "app-store"
    )

    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      submit_for_beta_review: false
    )
  end
end
