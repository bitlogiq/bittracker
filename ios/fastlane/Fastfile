default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_PRIVATE_KEY"],
      duration: 1200,
      in_house: false
    )

    match(
      type: "appstore",
      readonly: false,
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: "main",
      api_key: app_store_connect_api_key,
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTH_B64"],
      keychain_name: "login.keychain-db",
      keychain_password: ENV["MATCH_PASSWORD"]
    )

    # Build the IPA with explicit Team ID
    build_app(
      scheme: "Runner",
      workspace: "./Runner.xcworkspace",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          ENV["APP_IDENTIFIER"] => "match AppStore #{ENV["APP_IDENTIFIER"]}"
        }
      },
      xcargs: "DEVELOPMENT_TEAM=#{ENV["TEAM_ID"]}",
      allowProvisioningUpdates: true   # <--- FIX
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
