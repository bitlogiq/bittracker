default_platform(:ios)

platform :ios do
  desc "CI lane to build and upload to TestFlight"
  lane :ci do
    # Create a temp keychain for CI
    create_keychain(
      name: "ci_tmp",
      default_keychain: true,
      timeout: 3600,
      unlock: true,
      add_to_keychain_search_list: true,
      password: "temp_password_123"
    )

    # Sync certificates & provisioning profiles with match
    match(
      type: "appstore", # We want App Store distribution
      readonly: false,  # First run will create profiles if needed
      app_identifier: "za.co.bitlogiq.bittracker",
      git_url: ENV["MATCH_GIT_URL"],
      git_basic_authorization: ENV["MATCH_GIT_BASIC_AUTHORIZATION"], # optional
      keychain_name: "ci_tmp",
      keychain_password: "temp_password_123"
    )

    # Build the app for TestFlight
    build_app(
      scheme: "Runner",
      configuration: "Release",
      export_method: "app-store",
      xcargs: "-allowProvisioningUpdates DEVELOPMENT_TEAM=R4R4AW7JUQ",
      output_directory: "build",
      output_name: "BitTracker.ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end
