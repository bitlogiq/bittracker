# ios/Podfile

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Resolve FLUTTER_ROOT reliably (works on CI/macOS)
def flutter_root
  # 1) Prefer env var from the workflow
  env_root = ENV['FLUTTER_ROOT']
  if env_root && !env_root.empty?
    return env_root.gsub('\\','/')
  end

  # 2) Fallback to Generated.xcconfig written by `flutter pub get`
  generated = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated)
    raise "Generated.xcconfig must exist. Run 'flutter pub get' first."
  end

  File.foreach(generated) do |line|
    m = line.match(/FLUTTER_ROOT\=(.*)/)
    return m[1].strip.gsub('\\','/') if m
  end

  raise "FLUTTER_ROOT not found in Generated.xcconfig."
end

# Pull in Flutter's CocoaPods helpers
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Static frameworks = fastest & friendliest with Flutter
  use_frameworks! :linkage => :static
  use_modular_headers!

  # Add all Flutter plugin pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# ⬇️ Top-level post_install (NOT inside target)
post_install do |installer|
  # Ensure all pods use the same minimum iOS version
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |bc|
      bc.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'

      # ❌ Never sign Pods; only the app target (Runner) is signed in CI
      bc.build_settings['CODE_SIGNING_ALLOWED']  = 'NO'
      bc.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      bc.build_settings['CODE_SIGN_STYLE']       = 'Automatic'
      bc.build_settings['CODE_SIGN_IDENTITY']    = ''
      bc.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
    end
  end

  # Keep the main app target modern & compatible with Xcode 15+
  installer.generated_projects.each do |project|
    project.targets.each do |target|
      next unless target.name == 'Runner'
      target.build_configurations.each do |bc|
        bc.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] ||= 'YES'
        bc.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      end
    end
  end

  # Minor analyzer cleanup to reduce warnings noise
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['CLANG_ANALYZER_LOCALIZABILITY_NONLOCALIZED'] = 'YES'
  end
end
