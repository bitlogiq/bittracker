platform :ios, '12.0'

# Fail fast if Flutter isn't on PATH in CI
flutter_bin = `which flutter`.strip
if flutter_bin.empty?
  raise 'flutter not found on PATH; ensure the workflow sets up Flutter before pod install'
end

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  # Derive FLUTTER_ROOT from `flutter` tool location
  flutter_bin = `which flutter`.strip
  raise 'flutter not found on PATH; cannot derive FLUTTER_ROOT' if flutter_bin.empty?
  File.expand_path('../../..', File.realpath(flutter_bin)) # .../flutter/bin/flutter â†’ root
end

require File.expand_path(File.join('Flutter', 'podhelper'), __dir__)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Recommended for Flutter + iOS 12+ and bitcode removed on modern Xcode
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
    end
  end
end
