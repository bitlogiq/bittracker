# ios/Podfile

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Pull in Flutter's CocoaPods helpers (resolve relative to this Podfile)
require File.expand_path(File.join('Flutter', 'podhelper'), __dir__)

flutter_ios_podfile_setup

target 'Runner' do
  # If you need Swift frameworks, keep these. (Static linking prevents conflicts with Firebase, etc.)
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
